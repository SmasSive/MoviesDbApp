<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adapter_movie_height"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:background="@color/colorPrimaryDark"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_adapter_movie_height"
        android:layout_alignParentBottom="true"
        android:background="@color/blackAlpha60">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Mr.Robot" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:drawableEnd="@drawable/ic_baseline_star_rate_18px"
            android:drawableRight="@drawable/ic_baseline_star_rate_18px"
            android:drawableTint="@color/white"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            tools:text="9.0" />

    </LinearLayout>
</RelativeLayout>